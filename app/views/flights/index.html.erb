<h1>Flights:</h1>

<ul>
  <% @flights.each do |flight| %>
  <li id="<%= flight.id %>"><%= flight.number %>  <%= flight.airline_name %>
    <ul>
      <% flight.passengers.each do |passenger| %>
        <li><%= passenger.name %><%= button_to 'Remove From Flight', [flight, passenger], method: :delete, params: { passenger: passenger, flight: flight } %></li>
      <% end %>
    </ul></li>
  <% end %>
</ul>
